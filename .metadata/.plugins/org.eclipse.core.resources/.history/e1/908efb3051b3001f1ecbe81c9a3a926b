package Zoo;

public class Animal {
	   private String cor;
	   private  String raca;
	   private  double peso;
	   
	    // Getters e Setters
	   
	    public String getCor() {
		return cor;
	}

	public void setCor(String cor) {
		this.cor = cor;
	}

	public String getRaca() {
		return raca;
	}

	public void setRaca(String raca) {
		this.raca = raca;
	}

	public double getPeso() {
		return peso;
	}

	public void setPeso(double peso) {
		if(peso <0) {
			this.peso = peso;
			System.out.println("O valor foi alterado pois vocÃª passou um valor invalido");
		}
		else {
		    this.peso = peso;
	    }
	}

	    
	    public void brincar() {
	    	System.out.println("brincando...");
	    	
	    }
	    
}
	  
